{
   "name": "graphql-server",
   "version": "0.0.1",
   "description": "Awesome project developed with TypeORM.",
   "devDependencies": {
      "@types/glob": "^7.1.3",
      "@types/jest": "^26.0.23",
      "@types/node": "^15.3.1",
      "@types/uuid": "^8.3.0",
      "@types/yup": "^0.29.11",
      "chalk": "^4.1.1",
      "gql2ts": "^1.10.1",
      "jest": "^26.6.3",
      "nodemon": "^2.0.7",
      "rxjs": "^7.1.0",
      "start-server-and-test": "^1.12.2",
      "ts-jest": "^26.5.6",
      "ts-node": "9.1.1",
      "typescript": "4.2.4"
   },
   "dependencies": {
      "@types/bcryptjs": "^2.4.2",
      "@types/graphql": "14.5.0",
      "bcryptjs": "^2.4.3",
      "glob": "^7.1.7",
      "graphql-import": "^1.0.2",
      "graphql-request": "^3.4.0",
      "graphql-tools": "^7.0.5",
      "graphql-yoga": "^1.18.3",
      "merge-graphql-schemas": "^1.7.8",
      "pg": "^8.6.0",
      "reflect-metadata": "^0.1.13",
      "typeorm": "0.2.32",
      "uuid": "^8.3.2",
      "yup": "^0.32.9"
   },
   "scripts": {
      "start": "NODE_ENV=development nodemon --exec ts-node --files src/index.ts",
      "gen-schema-types": "gql2ts src/schema.graphql -o src/types/schema.d.ts",
      "test": "NODE_ENV=test jest --forceExit",
      "test-server": "NODE_ENV=test ts-node --files src/index.ts",
      "ci": "start-server-and-test test-server http://localhost:4000 test"
   },
   "jest": {
      "transform": {
         "^.+\\.tsx?$": "ts-jest"
      },
      "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
      "moduleFileExtensions": [
         "ts",
         "tsx",
         "js",
         "jsx",
         "json",
         "node"
      ]
   }
}
